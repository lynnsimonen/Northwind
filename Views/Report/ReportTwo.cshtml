<div class="report">
  <h1>ReportTwo: Discount Chart Example</h1>
  <div class="dropdown">
    <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"
      aria-expanded="false">
      Discount Category
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
      @foreach (Discount discount in Model)
      {
        <button class="dropdown-item" i type="button" text-align="center" margin="auto" asp-controller="Report"
        asp-action="ReportTwo" asp-route-id="@discount.DiscountId">@discount.Title</button>
      }
    </div>
  </div>
  <div id="chart_container">
    <canvas id="reportTwo"></canvas>
  </div>
</div>


